<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="XamlMultiLanguageEditor.MainWindow"
        Title="Xaml Multi-Language Editor"
        WindowStartupLocation="CenterScreen">
    <Panel>
        <DockPanel Margin="20">

            <DockPanel DockPanel.Dock="Top">
                <Button DockPanel.Dock="Right" Margin="10,0,0,0" Content="Load" x:Name="LoadButton" />
                <Button DockPanel.Dock="Right" Margin="10,0,0,0" Content="Refresh" x:Name="RefreshButton" />
                <TextBox x:Name="LangsFilePathTextBox" Text="Languages files path." />
            </DockPanel>
            
            
        </DockPanel>
    </Panel>
</Window>